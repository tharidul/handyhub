<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state (when user clicks on the EditText) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <stroke android:width="2dp" android:color="@color/dark_orange"/> <!-- Orange border when focused -->
            <corners android:radius="30dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="@color/light_orange"/> <!-- Light border when inactive -->
            <corners android:radius="30dp"/>
        </shape>
    </item>


</selector>

